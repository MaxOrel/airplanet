extends ../_template

block variables
	- var title = 'Index page'

block content
	div.wrapper
		header.header
			div.container
				.logo.logo--header
					a(href="/").logo__link
						img(src="/assets/img/logo.png", alt="Главная страница").logo__img
						span.logo__title Company Airplanet
				.header-contact
					a.header-contact__phone(href="tel:+78000039210") 8 (800) 00-392-10
					.header-contact__time
						a(href="#").header-contact__time-link График работы
						.schedule
							.schedule__time пн-вс: 09:00-20:00
							.schedule__nowork обед: 14:00-14:30
		div.container
			aside.sidebar
				nav.menu
					ul.menu__list
						li.menu__item
							a(href="about.html").menu__item-link.menu__item-link--main.is-active Главная
						li.menu__item
							a(href="comments.html").menu__item-link.menu__item-link--comments Отзывы
						li.menu__item
							a(href="team.html").menu__item-link.menu__item-link--team Экипаж
			main.content
				section.content-banner
				.test
				h2.content-title Тарифы
				section.price
					ul.price__list
						li.price__item
							.price__img
								img(src="./assets/img/icons/flower.png").price__img-pic
							.price__block
								span.price__title стандарт
								span.price__desc Создан для вашего комфортного отдыха
								ul.price__block-list
									li.price__block-item Питание включено
									li.price__block-item Багаж (5 кг)
									li.price__block-item Детское кресло
							.price__amount
								span.price__currency <sub>$</sub>19

						li.price__item.price__item--active
							div.price__img
								img(src="./assets/img/icons/star.png").price__img-pic
							.price__block
								span.price__title премиум
								span.price__desc Для любителей хороших впечатлений
								ul.price__block-list
									li.price__block-item Питание включено
									li.price__block-item Багаж (5 кг)
									li.price__block-item Детское кресло
							.price__amount
								span.price__currency <sub>$</sub>39
						li.price__item
							div.price__img
								img(src="./assets/img/icons/painter.png").price__img-pic 
							.price__block
								span.price__title лакшери
								span.price__desc Всё самое лучшее и незабываемое
								ul.price__block-list
									li.price__block-item Питание включено
									li.price__block-item Багаж (5 кг)
									li.price__block-item Детское кресло
							.price__amount
								span.price__currency <sub>$</sub>99
				h2.content-title Последние новости
				section.content-list
					ul.content-list__list
						li.content-list__item
							div(style="background:url(./assets/img/news/planeflying-1.png) no-repeat").content-list__img
								img(src="./assets/img/news/planeflying-1.png", alt="Картинка новости").content-list__img-pic.visible-hidden
							.content-list__text
								span.content-list__text-date 12.10.2016
								span.content-list__text-title Ночные перелёты дешевле!
								span.content-list__text-desc Летящий в ночном небе самолет — зрелище загадочное и романтическое. Крылатая машина величественно плывет в вышине, мерцая разноцветными огнями, и почему-то кажется, что она наполнена удивительными людьми, спешащими далеко-далеко по очень важным делам. 
						li.content-list__item
							div(style="background:url(./assets/img/news/photo.png) no-repeat").content-list__img
								img(src="./assets/img/news/photo.png", alt="Картинка новости").content-list__img-pic.visible-hidden
							.content-list__text
								span.content-list__text-date 01.02.2016
								span.content-list__text-title Путешествие в Грузию стало доступнее
								span.content-list__text-desc Экскурсии по Грузии в 2017 году от русских гидов: самые интересные маршруты в Грузии от профессиональных гидов. Обзорные, пешеходные, автомобильные, тематические экскурсии по интересным городам и курортам Грузии. Не пропустите такую возможность!
						li.content-list__item
							div(style="background:url(./assets/img/news/layer-5.png) no-repeat").content-list__img
								img(src="./assets/img/news/layer-5.png", alt="Картинка новости").content-list__img-pic.visible-hidden
							.content-list__text
								span.content-list__text-date 22.12.2015
								span.content-list__text-title Детские авиабилеты доступны для бизнес-класса
								span.content-list__text-desc Путешествие на самолете с детьми - небольшое испытание для родителей. Но это не экстремальное приключение, а обычный цивилизованный поход. Тем более, различные авиакомпании стараются помочь скидками на детские авиабилеты, специальным питанием и другими услугами на борту лайнера.
				.pagination
					.pagination__title Страница 1 из 7
					a(href="#").pagination__btn.pagination__btn--prev.pagination__btn--active &lsaquo;
					ul.pagination__list
							li.pagination__item.pagination__item--active
									a(href="#").pagination__link 1
							li.pagination__item
									a(href="#").pagination__link 2
							li.pagination__item
									a(href="#").pagination__link 6
							li.pagination__item
									a(href="#").pagination__link 4
							li.pagination__item
									a(href="#").pagination__link 5
							li.pagination__item
									a(href="#").pagination__link 6
							li.pagination__item
									a(href="#").pagination__link 7
					a(href="#").pagination__btn.pagination__btn--next &rsaquo;
