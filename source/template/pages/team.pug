extends ../_template

block variables
    - var title = 'Index page'

block content
    div.wrapper
        header.header
            div.container
                .logo.logo--header
                    a(href="/").logo__link
                        img(src="/assets/img/logo.png", alt="Главная страница").logo__img
                .header-contact
                    a.header-contact__phone(href="tel:+78000039210") 8 (800) 00-392-10
                    .header-contact__time
                        a(href="#").header-contact__time-link График работы
                        .schedule
                            .schedule__time пн-вс: 09:00-20:00
                            .schedule__nowork обед: 14:00-14:30
        div.container
            aside.sidebar
                nav.menu
                    ul.menu__list
                        li.menu__item
                            a(href="about.html").menu__item-link.menu__item-link--main Главная
                        li.menu__item
                            a(href="comments.html").menu__item-link.menu__item-link--comments Отзывы
                        li.menu__item
                            a(href="team.html").menu__item-link.menu__item-link--team.is-active Экипаж
            main.content
                .breadchrumbs
                    ul.breadchrumbs__list
                        li.breadchrumbs__item
                            a(href="/about.html").breadchrumbs__item-link Главная
                        li.breadchrumbs__item
                            a(href="#").breadchrumbs__item-link.breadchrumbs__item-link--last Экипаж
                .content-title.content-title--team Экипаж
                .l-team
                    ul.l-team__list
                        li.c-team__item
                            .l-team__img-wrap
                                img(src="/assets/img/team/Alex.jpg", alt="Команда").c-team__img
                                span.c-team__img-title Алексей
                            .l-team__desc
                                span.c-team__desc-user Белов Алексей Вадимович
                                span.c-team__desc-occ Главный пилот
                                span.c-team__desc-text Высокий профессионализм, честь и отвага – все это характеристики главного пилота Белова А.В. На его счету более 700 полетов. Награжден за мужество и отвагу указом президента.
                        li.c-team__item
                            .l-team__img-wrap
                                img(src="/assets/img/team/Inna.jpg", alt="Команда").c-team__img
                                span.c-team__img-title Инна
                            .l-team__desc
                                span.c-team__desc-user Сухарина Инна Николаевна
                                span.c-team__desc-occ Бортпроводник
                                span.c-team__desc-text Благодаря деятельности этого человека, на борту самолета клиенты чувствуют себя, как дома. Инна Николаевна чутко относится ко всем требованиям клиентов, очень любит детей и всячески помогает сделать полет комфортным и приятным.
                        li.c-team__item
                            .l-team__img-wrap
                                img(src="/assets/img/team/Boris.jpg", alt="Команда").c-team__img
                                span.c-team__img-title Борис
                            .l-team__desc
                                span.c-team__desc-user Лещ Борис Анатольевич
                                span.c-team__desc-occ Авиатехник
                                span.c-team__desc-text Человек с золотыми руками, инженер и конструктор от Бога! Борис Анатольевич работает уже более 50 лет и на своем веку видел, как из старых моделей самолетов появлялись настоящие авиа шедевры.
                        li.c-team__item
                            .l-team__img-wrap
                                img(src="/assets/img/team/Elina.jpg", alt="Команда").c-team__img
                                span.c-team__img-title Элина
                            .l-team__desc
                                span.c-team__desc-user Дигангидзе Элина Даниловна
                                span.c-team__desc-occ Диспетчер
                                span.c-team__desc-text Ей присущ внимательный подход к расчетам, а отменная память удивляет даже самых опытных членов экипажа. За 22 года работы она стажировала более 100 диспетчеров для работы в крупнейших аэропортах страны. Знает в совершенстве 5 иностранных языков.
                        li.c-team__item
                            .l-team__img-wrap
                                img(src="/assets/img/team/Elena2.jpg", alt="Команда").c-team__img
                                span.c-team__img-title Елена
                            .l-team__desc
                                span.c-team__desc-user Следь Елена Николаевна
                                span.c-team__desc-occ Старший бортпроводник
                                span.c-team__desc-text Вежливая улыбка, внимательность к деталям и большой опыт работы – это лишь малая часть достоинств Елены Николаевны. Старший бортпроводник задает тон всей поездке, поэтому клиенты, которые летят с ней, заряжаются отличным настроением и гармонией.
                        li.c-team__item
                            .l-team__img-wrap
                                img(src="/assets/img/team/Yrii.jpg", alt="Команда").c-team__img
                                span.c-team__img-title Юрий
                            .l-team__desc
                                span.c-team__desc-user Нестеренко Юрий Афанасьевич
                                span.c-team__desc-occ Второй пилот
                                span.c-team__desc-text Правая рука главного пилота, опытный и отважный помощник. О своей работе в шутку говорит так «Наше дело правое, не мешать левому». Опыт работы составляет 18 лет, внимательно относится ко всем деталям и считает свою работу – делом жизни.
                section.content-partner
                    h2.content-title Партнеры
                    ul.content-partner__list
                        li.content-partner__item
                            a(href="#").content-partner__item-link
                                img(src="/assets/img/partners/partner1.jpg", alt="Партнер")
                        li.content-partner__item
